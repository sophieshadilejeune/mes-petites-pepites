<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

    <% if user_signed_in? %>
  <div class="nav-item active" data-id="<%= current_user.id %>" id="user-id">
  Hi <%= current_user.nickname %></div>
<% end %>



<% if user_signed_in? %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

               <% if current_user.cities.count == 0 %>
               <li class="nav-item active">
            <%= link_to "My PépitesBoard", cities_select_path, class: "nav-link btn-ghost-navbar", style: "width:200px" %>
          </li>
          <% else %>
          <li class="nav-item active">
      <%= link_to "My PépitesBoard", dashboard_path(current_user.cities.first.id), class: "nav-link btn-ghost-navbar", style: " width:200px" %>
      </li>
      <% end %>

        <li class="nav-item dropdown">
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "User Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <div style="display: flex">
          <%= link_to "Login", new_user_session_path, class: "nav-link btn-ghost", style: "margin-right: 10px;" %>

          <%= link_to "Sign Up",  new_user_registration_path, class: "nav-link btn-ghost", style: "margin-right: 0px;" %>
          </div>
      <% end %>
    </ul>
  </div>
</div>
