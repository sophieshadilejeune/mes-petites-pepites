<div class="visitor-banner">

  Current City: <div id="city-name"><%= @city.name %></div>
  <div class="search-form">
          <select id="cities-input" class=" js-example-basic-single" style="
          width:60%; position:absolute;">
          <option value=""></option>
          <% @cities.each do |city| %>
          <option data-id="<%= city.id %>" value="<%= city.name %>"><%= city.name %></option>
          <% end %>
        </select>
</div>

</div>

  <div class="categories-options">

  <div class="toggle" style="float: left">
  <div class="text-switch" id="text-switch" >
OFF : Displaying everybody's Pépites
</div>
<label class="switch" id="switch">
  <input type="checkbox">
  <span class="slider round"></span>
</label>
</div>

<div class="categories">

    <div class="btn btn-ghost" id="category-button-all">
    See all Pépites in <%= @city.name %>
  </div>

  <% @categories.each do |category| %>
  <div class="btn btn-ghost" id="category-button">
    <%= category.name %>
  </div>
  <% end %>
</div>

  <%= link_to "Manage Categories", categories_manage_path, class: "manage-categories-link"  %>
  </div>

<div id="places-container" class="fluid-container">
<div class="container" style="margin-top: 10px">


  <div id="grid" class="row my-shuffle-container" >

 <div class="mt-3 mb-2 col-6 col-md-4 col-xl-3 shuffle-item-user" data-groups='["Default"]'  style="top: 0px; left: 0px;">

    <div id="add-new-place-card" class="shuffle-card">
      <div class="shuffle-card-body" style="flex: 1 1 auto; padding: 1.25rem;">
      <%= link_to "Add a new Pépite" ,new_place_path%>
      </div>
    </div>

  </div>

 <div class="mt-3 mb-2 col-6 col-md-4 col-xl-3 shuffle-item-all" data-groups='["Default"]'  style="top: 0px; left: 0px;">

    <div id="add-new-place-card" class="shuffle-card">
      <div class="shuffle-card-body" style="flex: 1 1 auto; padding: 1.25rem;">
      <%= link_to "Add a new Pépite" ,new_place_path%>
      </div>
    </div>

  </div>

<% @places.each do |place|  %>

  <div class="mt-3 mb-2 col-6 col-md-4 col-xl-3 shuffle-item-all" data-groups='["<%= place.category.name  %>"]' data-owner="all" style="top: 0px; left: 0px;">

    <div class="shuffle-card" id="place_card">
      <div class="shuffle-card-body" style="flex: 1 1 auto; padding: 1.25rem;">
        <%= link_to "#{place.name}" , place_path(place) %>
        <%= link_to '+', place_path(place), method: :delete, data: { confirm: "Are you sure?" }, class: 'card-options option-remove-link'  %>
        <%= link_to edit_place_path(place), class: "card-options option-edit-link" do %>
        <i class="far fa-edit fa-xs"></i>
        <% end %>
      </div>
    </div>
  </div>

<% end %>

<% @my_places.each do |my_place| %>


  <div class="mt-3 mb-2 col-6 col-md-4 col-xl-3 shuffle-item-user" data-groups='["<%= my_place.category.name  %>"]' data-owner="user" style="top: 0px; left: 0px;">

    <div class="shuffle-card" id="place_card">
      <div class="shuffle-card-body" style="flex: 1 1 auto; padding: 1.25rem;">
        <%= link_to "#{my_place.name}" , place_path(my_place) %>
        <%= link_to '+', place_path(my_place), method: :delete, data: { confirm: "Are you sure?" }, class: 'card-options option-remove-link'  %>
        <%= link_to edit_place_path(my_place), class: "card-options option-edit-link" do %>
        <i class="far fa-edit fa-xs"></i>
        <% end %>
      </div>
    </div>
  </div>

<% end %>
  </div>

</div>
</div>


